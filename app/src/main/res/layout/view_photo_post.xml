<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="dev.akat.veka.widget.post.PhotoPostLayout">

    <ImageView
        android:id="@+id/postAvatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:background="@drawable/round_image"
        android:contentDescription="@string/desc_avatar_image"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/postTitle"
        style="@style/TitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/postSubtitle"
        style="@style/SubtitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginVertical="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_large"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="@tools:sample/date/ddmmyy" />

    <TextView
        android:id="@+id/postContent"
        style="@style/ContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_large"
        android:layout_marginVertical="@dimen/spacing_small"
        tools:text="@tools:sample/lorem[42]" />

    <ImageView
        android:id="@+id/postPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:contentDescription="@string/desc_post_photo"
        tools:src="@tools:sample/backgrounds/scenic[3]" />

    <Button
        android:id="@+id/postLikeButton"
        style="@style/PostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_small"
        app:icon="@drawable/ic_like_24"
        tools:text="500" />

    <Button
        android:id="@+id/postCommentButton"
        style="@style/PostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_small"
        app:icon="@drawable/ic_chat_24"
        tools:text="42" />

    <Button
        android:id="@+id/postShareButton"
        style="@style/PostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        app:icon="@drawable/ic_share_24"
        tools:text="66" />
</merge>