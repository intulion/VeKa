<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/attachmentImageView"
        android:layout_width="@dimen/attachment_image_size"
        android:layout_height="@dimen/attachment_image_size"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginHorizontal="@dimen/spacing_small"
        android:adjustViewBounds="true"
        android:background="@drawable/round_rect_image"
        android:contentDescription="@string/desc_attachment_image"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/attachmentRemoveButton"
        android:layout_width="@dimen/image_button_small_size"
        android:layout_height="@dimen/image_button_small_size"
        android:layout_gravity="top|end"
        android:background="@drawable/round_image"
        android:contentDescription="@string/desc_remove_button"
        android:src="@drawable/ic_remove_16"
        android:tint="@color/secondaryColor" />
</FrameLayout>